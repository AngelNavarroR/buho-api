    <groupId>org.angbyte</groupId>
    <artifactId>buho-api</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>Buho api</name>
    <description>Permite realizar consultas usando JPA pasando el nombre de la entidad, devuelve un json los campos de la entidad.</description>
    <url>https://github.com/AngelNavarroR/jpa-busqueda-api</url>

    <licenses>

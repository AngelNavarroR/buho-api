    <developers>
        <developer>
            <name>Angel Navarro</name>
            <email>navarroangelr@gmail.com</email>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:https://github.com/AngelNavarroR/jpa-busqueda-api.git</connection>
        <developerConnection>scm:git:https://github.com/AngelNavarroR/jpa-busqueda-api.git</developerConnection>
        <url>https://github.com/AngelNavarroR/jpa-busqueda-api</url>
